{
  "extends": "next/core-web-vitals",
  "rules": {
    "semi": ["warn", "never"],
    "quotes": ["warn", "single"],
    "arrow-parens": ["error", "as-needed"],
    "no-unused-vars": [
      "warn",
      { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }
    ],
    "import/order": [
      "error",
      {
        "groups": [
          ["builtin", "external"],
          "internal",
          ["parent", "sibling", "index"]
        ]
      }
    ]
  }
}
